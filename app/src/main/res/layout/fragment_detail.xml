<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".DetailFragment"
    android:background="@color/mainWhite">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/woman"
                    android:background="@drawable/man_voice"

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:onClick="onWomanVoiceClick"
                    app:layout_constraintEnd_toStartOf="@+id/man"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:background="@drawable/woman_voice"
                    android:id="@+id/man"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:onClick="onManVoiceClick"
                    android:layout_marginRight="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                    android:id="@+id/head_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="100sp"
                    android:layout_weight="2"
                    android:paddingBottom="20dp"
             />

                <ImageView
                    android:layout_weight="2"
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ay"
                    android:textAlignment="center"
                    android:paddingBottom="40dp"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/example"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingBottom="10dp"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/transcript"

                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>